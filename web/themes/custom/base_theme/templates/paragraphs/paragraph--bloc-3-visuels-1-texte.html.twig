{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

<div{{attributes.addClass(classes)}}>
	<div class="">
		<div class="flex flex-col my-16 md:grid md:grid-cols-10 gap-5">
            {# LEFT #}
			<div class="flex flex-col md:col-start-1 md:col-span-4 md:grid md:grid-rows-10 gap-5">
				<div class="min-h-32 md:row-start-1 md:row-span-3 grid">
					{{ content.field_texte_wysiwyg }}
				</div>

				{% if paragraph.field_3_visuels|length > 1 %}
					{% set image2 = paragraph.field_3_visuels.1.entity %}
					{% if image2 and image2.field_media_image.entity %}
						<div class="md:row-start-4 md:row-span-7">
							<img src="{{ file_url(image2.field_media_image.entity.uri.value) }}" alt="{{ image2.field_media_image.alt }}" class="w-full h-full object-cover rounded-xl">
						</div>
					{% endif %}
				{% endif %}
			</div>

            {#  RIGHT #}
			<div class="flex flex-col md:col-start-5 md:col-span-6 md:grid md:grid-rows-10 gap-5">
				{% if paragraph.field_3_visuels|length > 0 %}
					{% set image1 = paragraph.field_3_visuels.0.entity %}
					{% if image1 and image1.field_media_image.entity %}
						<div class="md:row-start-1 md:row-span-5">
							<img src="{{ file_url(image1.field_media_image.entity.uri.value) }}" alt="{{ image1.field_media_image.alt }}" class="w-full h-full object-cover rounded-xl">
						</div>
					{% endif %}
				{% endif %}

				{% if paragraph.field_3_visuels|length > 2 %}
					{% set image3 = paragraph.field_3_visuels.2.entity %}
					{% if image3 and image3.field_media_image.entity %}
						<div class="md:row-start-6 md:row-span-5">
							<img src="{{ file_url(image3.field_media_image.entity.uri.value) }}" alt="{{ image3.field_media_image.alt }}" class="w-full h-full object-cover rounded-xl">
						</div>
					{% endif %}
				{% endif %}
			</div>
		</div>
	</div>
</div>
